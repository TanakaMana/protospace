- if user_signed_in?
  - if prototype.like_user(current_user.id)
    = button_to like_path(like, prototype), method: :delete, id: "like-button", class: 'btn btn-default', remote: true do
      = image_tag("icon_heart_red.svg")
      LIKE
      %span.num
        = "#{ @prototype.likes.count }"
  - else
    = button_to likes_path(prototype), method: :post, class: 'btn btn-default', remote: true do
      = image_tag("icon_heart.svg")
      LIKE
      %span.num
        = "#{ @prototype.likes.count }"
- else
  = image_tag("icon_heart.svg")
  LIKE
  %span.num
    = "#{ @prototype.likes.count }"
