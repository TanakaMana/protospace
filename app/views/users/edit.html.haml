.container.user-new.col-md-8.col-md-offset-2
  = form_for current_user do |f|
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :name, placeholder: "Username"
          .user-image.col-md-2
            %button.btn.btn-primary Change image
            = f.text_field :image
        = f.email_field :email, placeholder: "E-Mail"
        = f.password_field :password, placeholder: "Password", autocomplete: "off"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member, placeholder: "Member"
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, cols: "30", rows: "4", placeholder: "Profile"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :work, cols: "30", rows: "4", placeholder: "Works"
    .row.text-center.user-btn
      = f.submit "Save", class: "btn btn-lg btn-primary btn-block"
